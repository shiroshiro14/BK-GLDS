<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusPanel">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/normal"
        android:layout_centerHorizontal="true"
        android:id="@+id/pipe_logo"
        android:layout_alignBottom="@+id/valve_status"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pipe_status"
        android:layout_alignBottom="@+id/valve_status"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/valve_status"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp" />

    <EditText
        android:id="@+id/gas_level"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/valve_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pressure"
        android:layout_below="@+id/gas_level"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pressure"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"
        android:text="LOCK VALVE"
        android:textSize="13dp"
        android:id="@+id/lock_btn"
        />



</RelativeLayout>